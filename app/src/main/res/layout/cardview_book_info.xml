<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.BookInfo.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bookInfoCardView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="fill_parent"
                android:text="失控"
                android:id="@+id/floorNameTextView"
                android:textSize="@dimen/small_text"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="三楼"
                android:id="@+id/bookPosTextView"
                android:textSize="@dimen/medium_text"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="G303-49/10"
                android:id="@+id/bookIdTextView"
                android:textSize="@dimen/small_text"
                android:layout_below="@+id/floorNameTextView" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="fill_parent"
                android:text="(美)凯文*凯丽著 新星出版社 2010"
                android:id="@+id/bookAuthorTextView"
                android:textSize="@dimen/very_small_text" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="剩余0本,共3本"
                android:layout_weight="2"
                android:id="@+id/floorUsageTextView"
                android:textSize="@dimen/small_text"
                android:layout_alignBottom="@+id/bookAuthorTextView"
                />
        </LinearLayout>
        <LinearLayout
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="2dp">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/bookMapImageView"
                android:layout_height="25dp"
                android:background="@drawable/btn_map"
                android:layout_marginLeft="40dp"
                android:layout_below="@+id/bookAuthorTextView" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="fill_parent" />

            <ToggleButton
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textOn=""
                android:textOff=""
                android:checked="false"
                android:background="@drawable/collect_normal"
                android:layout_height="fill_parent"
                android:id="@+id/btncollectmap"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>