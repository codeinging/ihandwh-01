<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="match_parent">

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/success"/>-->
      <TextView
          android:layout_width="match_parent"
          android:textSize="30sp"
          android:gravity="center_vertical|center_horizontal"
          android:textAlignment="center"
          android:layout_gravity="center_horizontal"
          android:id="@+id/order_seat_result_tv"
          android:layout_height="0dp"
          android:layout_weight="1.6"
          android:text="@string/ordering"/>
      <ProgressBar
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:id="@+id/orderprogressbar"
          style="?android:attr/progressBarStyle"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:visibility="invisible"
        android:id="@+id/middleView"
        android:background="@color/white"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">
       <!-- <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="2dp">

        </View>-->
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:id="@+id/your_his_words"
            android:gravity="center_vertical|center_horizontal"
            android:text="您的预约记录"/>
        <View
            android:background="@color/gray"
            android:id="@+id/order_info_line1"
            android:layout_width="match_parent"
            android:layout_height="2dp">

        </View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:id="@+id/order_info_time_tv"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:text="时间：2015-12-23"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:id="@+id/order_info_position_tvtv"
            android:text="位置：图东环楼三楼001座"
            android:layout_weight="1"
            />
        <View
            android:background="@color/gray"
            android:id="@+id/order_info_line2"
            android:layout_width="match_parent"
            android:layout_height="2dp">

        </View>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:text="请您于2015年12月21日，\n7.50am-8.35am准时刷卡确认"
            android:id="@+id/order_info_warn_tv"
            android:visibility="visible"
            android:textAlignment="center"

            />


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:background="@drawable/btn_background"
            android:enabled="true"
            android:textColor="@color/white"
            android:id="@+id/btnafter_order_result"
            android:layout_margin="16dp"
            android:text="返回"/>
    </LinearLayout>

</LinearLayout>