<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/holo_primary</item>
        <item name="colorPrimaryDark">@color/holo_primary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_holo_light</item>
    </style>
    <style name="Widget.FloorInfo.CardView" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">@dimen/card_padding</item>
        <item name="cardBackgroundColor">@color/default_background_color</item>
    </style>
    <style name="Widget.SeatInfo.CardView" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">4dp</item>
        <item name="cardBackgroundColor">@color/default_background_color</item>
    </style>
    <style name="Widget.BookInfo.CardView" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">4dp</item>
        <item name="cardBackgroundColor">@color/default_background_color</item>
    </style>
    <style name="Widget.FeedBack.CardView" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">6dp</item>
        <item name="cardBackgroundColor">#EEEEEE</item>
    </style>
    <style name="Widget.SelectFloor.CardView" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">4dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
    </style>
    <style name="HomeActivityTheme" parent="android:Theme.Holo.Light">
        <item name="colorPrimary">@color/holo_primary</item>
        <item name="android:colorBackground">@color/background_holo_light</item>
    </style>

</resources>
